{
    "compilerOptions":  {
                            "module":  "commonjs",
                            "declaration":  true,
                            "removeComments":  true,
                            "emitDecoratorMetadata":  true,
                            "experimentalDecorators":  true,
                            "allowSyntheticDefaultImports":  true,
                            "target":  "ES2017",
                            "sourceMap":  true,
                            "outDir":  "./dist",
                            "baseUrl":  "./",
                            "moduleResolution":  "node",
                            "paths":  {
                                "@a1/shared":  [
                                    "../../packages/shared/src/index"
                                ],
                                "@a1/shared/*":  [
                                    "../../packages/shared/src/*"
                                ]
                            },
                            "incremental":  true,
                            "skipLibCheck":  true,
                            "strictNullChecks":  true,
                            "types":  [
                                          "node",
                                          "jest"
                                      ]
                        },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "prisma", "test", "jest.config.ts"]
}
