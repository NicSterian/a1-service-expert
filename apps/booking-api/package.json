{
    "name":  "booking-api",
    "private":  true,
    "version":  "0.0.1",
    "description":  "NestJS API for the A1 Service Expert booking platform",
    "scripts": {
        "dev": "nest start --watch --entryFile apps/booking-api/src/main",
        "build": "nest build",
        "start": "node dist/apps/booking-api/src/main.js",
        "prisma:g": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:seed": "prisma db seed",
        "test": "jest",
        "smtp:verify": "ts-node --transpile-only scripts/test-smtp.ts verify",
        "smtp:test": "ts-node --transpile-only scripts/test-smtp.ts send",
        "db:reset": "pnpm prisma:migrate && pnpm admin:create",
        "admin:list": "ts-node --transpile-only scripts/admin-tools.ts list",
        "admin:create": "ts-node --transpile-only scripts/admin-tools.ts create-admin",
        "admin:set-role": "ts-node --transpile-only scripts/admin-tools.ts set-role",
        "admin:set-password": "ts-node --transpile-only scripts/admin-tools.ts set-password"
    },
    "prisma":  {
                   "seed":  "ts-node --transpile-only prisma/seed.ts"
               },
    "dependencies":  {
                         "@a1/shared":  "workspace:*",
                         "@nestjs/common":  "^10.4.5",
                         "@nestjs/config":  "^3.2.0",
                         "@nestjs/core":  "^10.4.5",
                         "@nestjs/jwt":  "^10.2.0",
                         "@nestjs/platform-express":  "^10.4.5",
                         "@prisma/client":  "^5.16.1",
                         "bcryptjs":  "^2.4.3",
                         "class-transformer":  "^0.5.1",
                         "class-validator":  "^0.14.1",
                         "dotenv":  "^16.4.5",
                         "handlebars":  "^4.7.8",
                         "ioredis":  "^5.4.1",
                         "nodemailer":  "^6.9.13",
                         "pdfkit":  "^0.13.0",
                         "puppeteer":  "^24.27.0",
                         "reflect-metadata":  "^0.2.2",
                         "rxjs":  "^7.8.1"
                     },
    "devDependencies":  {
                            "@nestjs/cli":  "^10.3.2",
                            "@nestjs/schematics":  "^10.1.1",
                            "@nestjs/testing":  "^10.4.5",
                            "@types/bcryptjs":  "^2.4.2",
                            "@types/express":  "^5.0.3",
                            "@types/jest":  "^29.5.12",
                            "@types/node":  "^20.14.9",
                            "@types/nodemailer":  "^6.4.15",
                            "@types/pdfkit":  "^0.12.11",
                            "jest":  "^29.7.0",
                            "prisma":  "^5.16.1",
                            "ts-jest":  "^29.1.1",
                            "ts-node":  "^10.9.2",
                            "typescript":  "^5.4.5"
                        }
}

